<% layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
    <h1 class="col-6 offset-2">LogIn</h1>
  <div class="col-8 offset-2">
    <form method="POST" action="/login" class="needs-validation mt-4" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          id="username"
          name="username"
          placeholder="enter username"
          type="text"
          required
          class="form-control"
        />
        <div class="valid-feedback">username looks good!</div>
      </div>
      
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          id="password"
          name="password"
          placeholder="enter password"
          type="password"
          required
          class="form-control"
        />
      </div>

      <button class="btn btn-dark add-btn">LogIn</button>
      
    </form>
  </div>
</div>
